<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/ourblue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/francise_rv"
        android:layout_width="410dp"
        android:layout_height="519dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="5dp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/eligible"
        android:layout_width="369dp"
        android:layout_height="102dp"
        android:fontFamily="@font/mapo"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/francise_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.415" />

    <TextView

        android:id="@+id/francise_list_tv"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="프랜차이즈 리스트"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/francise_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eligible"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/go_back"
        android:layout_width="384dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_button"
        android:text="뒤로 이동"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/francise_list_tv"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>